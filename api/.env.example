# Gagiteck API Environment Variables
# Copy this file to .env and fill in your values

# App Configuration
VERSION=0.1.0
DEBUG=false
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production  # development, staging, production

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=24
API_KEY_PREFIX=ggt_

# Database (RDS PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://gagiteck:password@your-rds-endpoint.amazonaws.com:5432/gagiteck

# Redis (ElastiCache)
# Format: redis://host:port or redis://host:port/db
REDIS_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379
REDIS_CACHE_TTL=3600

# AWS Configuration
AWS_REGION=us-east-1

# AWS SES Email
SES_SENDER_EMAIL=noreply@mimoai.co

# Sentry Error Tracking (optional)
# Get your DSN from https://sentry.io
SENTRY_DSN=https://your-key@sentry.io/your-project
SENTRY_TRACES_SAMPLE_RATE=0.1

# LLM Providers
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://app.mimoai.co
