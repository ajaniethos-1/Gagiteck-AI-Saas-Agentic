# Gagiteck API Environment Variables
# Copy this file to .env and fill in your values

# App Configuration
VERSION=0.2.1
DEBUG=false
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production  # development, staging, production

# Security - IMPORTANT: Generate a secure secret!
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
API_KEY_PREFIX=ggt_

# Account Security (SOC2 Compliance)
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
PASSWORD_MIN_LENGTH=8
REQUIRE_MFA_FOR_ADMIN=true

# Audit Logging (SOC2 Compliance)
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# Database (RDS PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://gagiteck:password@your-rds-endpoint.amazonaws.com:5432/gagiteck

# Redis (ElastiCache)
# Format: redis://host:port or redis://host:port/db
REDIS_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379
REDIS_CACHE_TTL=3600

# AWS Configuration
AWS_REGION=us-east-1

# AWS SES Email
SES_SENDER_EMAIL=noreply@mimoai.co

# Sentry Error Tracking (optional)
# Get your DSN from https://sentry.io
SENTRY_DSN=https://your-key@sentry.io/your-project
SENTRY_TRACES_SAMPLE_RATE=0.1

# LLM Providers
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://app.mimoai.co
